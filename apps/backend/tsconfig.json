{
    "compilerOptions": {
      "lib": ["es6", "dom"],
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,  
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false, 
      "typeRoots": ["./src/types", "./node_modules/@types"]

      
    },
    "include": ["src/**/*","src/types/**/*.d.ts"],
    "exclude": ["node_modules"]
  }
  
